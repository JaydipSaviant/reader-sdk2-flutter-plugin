<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_3p"
    >

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/connect_button"
      android:layout_width="match_parent"
      android:layout_height="@dimen/reader_add_reader_height"
      android:layout_marginTop="@dimen/reader_add_reader_margin_top"
      android:background="@color/white"
      android:foreground="?android:attr/selectableItemBackground"
      app:layout_constraintTop_toBottomOf="@id/reader_list"
      >
    <ImageView
        android:id="@+id/add_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/screen_padding"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_reader"
        style="@style/AddReaderButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/add_icon"
        app:layout_constraintTop_toTopOf="parent"
        />
  </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/reader_list"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:scrollbars="vertical"
      android:layout_marginTop="@dimen/reader_list_margin_top"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:listitem="@layout/reader_in_list"
      />
</androidx.constraintlayout.widget.ConstraintLayout>
