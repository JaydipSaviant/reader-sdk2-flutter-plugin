<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TotalLabel" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/total_label_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">@dimen/total_label_padding_top</item>
    </style>

    <style name="AmountText" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/amount_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="AmountSubText" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/amount_subtext_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CardDetailsManuallyText" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/enter_manually_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PaymentOptions" parent="android:TextAppearance.StatusBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="PaymentOptionsEditText" parent="Widget.AppCompat.EditText">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:layout_marginEnd">@dimen/option_margin_end</item>
        <item name="android:textSize">@dimen/settings_textsize</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:text"/>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="DrawerLabel" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textSize">@dimen/option_text_size</item>
    </style>

    <style name="AlertDialog">
        <item name="android:paddingStart">@dimen/dialog_padding_start</item>
        <item name="android:paddingEnd">@dimen/dialog_padding_end</item>
    </style>

    <style name="CurrencySymbolText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/amount_text_size</item>
    </style>

    <style name="CashPaymentEditText">
        <item name="android:textSize">@dimen/amount_text_size</item>
    </style>

    <style name="ExternalPaymentSpinnerItem">
        <item name="android:textSize">@dimen/spinner_item_text_size</item>
    </style>
</resources>
