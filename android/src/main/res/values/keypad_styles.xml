<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="CartAmountText" parent="Base.Widget.AppCompat.Button.Borderless">
    <item name="android:textSize">@dimen/amount_text_size</item>
  </style>

  <style name="ChargeButton" parent="PrimaryButtonBase">
    <item name="android:textSize">@dimen/title_text_size</item>
    <item name="android:paddingTop">0dp</item>
    <item name="android:paddingBottom">0dp</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:layout_marginBottom">24dp</item>
  </style>

  <style name="KeypadButton" parent="Base.Widget.AppCompat.Button.Borderless">
    <item name="android:shadowRadius">0</item>
    <item name="android:background">@color/white</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textSize">@dimen/keypad_text_size</item>
    <item name="android:foreground">?android:attr/selectableItemBackground</item>
  </style>

  <style name="WarningBanner" parent="Base.Widget.AppCompat.Button.Borderless">
    <item name="android:background">@color/warning_background</item>
    <item name="android:textColor">@color/warning_foreground</item>
    <item name="android:textSize">@dimen/title_text_size</item>
    <item name="android:paddingTop">0dp</item>
    <item name="android:paddingBottom">0dp</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:layout_marginBottom">24dp</item>
  </style>
</resources>
